{
  "name": "zippie-multisig-wallet",
  "version": "1.0.0",
  "description": "Zippie multisig wallet",
  "main": "truffle-config.js",
  "files": [
    "build",
    "contracts",
    "test"
  ],
  "scripts": {
    "node": "ganache-cli -a 101 -m zippie -i 42",
    "node:kovan": "parity --chain kovan --no-warp --unlock 0xdc6a1d0211b9d505cde594b8fe33e98945bccbd4 --password /Users/guest/Dev/Blockchains/Ethereum/Kovan/keys/.password --keys-path /Users/guest/Dev/Blockchains/Ethereum/Kovan/keys",
    "test": "truffle test",
    "test:kovan": "truffle test --network kovan",
    "test:infura": "truffle test --network infura",
    "flatten": "truffle-flattener contracts/zippie/ZippieWallet.sol > ZippieWallet-flat.sol",
    "coverage": "./node_modules/.bin/solidity-coverage --network development && cat coverage/lcov.info | ./node_modules/.bin/coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zippiehq/personal_multisigs.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "web3",
    "multisig",
    "wallet",
    "eth",
    "erc20",
    "weth",
    "zippie"
  ],
  "author": "Zippie",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zippiehq/personal_multisigs/issues"
  },
  "homepage": "https://github.com/zippiehq/personal_multisigs",
  "devDependencies": {
    "coveralls": "^3.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "solidity-coverage": "latest",
    "ganache-cli": "^6.2.3",
    "openzeppelin-solidity": "latest",
    "ethereumjs-wallet": "latest",
    "truffle": "^5.0.0-beta.2",
    "truffle-flattener": "^1.2.10"
  },
  "dependencies": {
    "solc": "^0.4.24",
    "solhint": "^1.5.1",
    "truffle-hdwallet-provider": "^1.0.4",
    "truffle-privatekey-provider": "^1.1.0"
  }
}
